<Window x:Class="TossalERP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TossalERP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button Click="ButtonCrearActo_Click" ClipToBounds="True" >Crear Acto</Button>
            <Button Click="ButtonVerActos_Click" >Ver actos</Button>
        </StackPanel>
        <StackPanel Grid.Column="1" VerticalAlignment="Center" Panel.ZIndex="20" >
            <Button Click="ButtonCrearMusico_Click" >Crear Musico</Button>
            <Button Click="ButtonVerMusicos_Click" >Ver Musicos</Button>
        </StackPanel>
    </Grid>
</Window>