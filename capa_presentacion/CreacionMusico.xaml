<Page x:Class="capa_presentacion.CreacionMusico"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:capa_presentacion"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock>Nombre</TextBlock>
            <TextBox x:Name="TbNombre"></TextBox>
            <TextBlock>Instrumento</TextBlock>
            <ComboBox x:Name="CbInstrumentos"></ComboBox>
            <Button Margin="0,20,0,0" HorizontalAlignment="Center" Click="btnGuardar_Click">Guardar</Button>
        </StackPanel>
    </Grid>
</Page>
